    <!-- unorderd list -->
    <ul type="square">
        <li>01 raw</li>
        <li>02 raw</li>
        <ul type="circle">
            <li>02.1 raw</li>
            <li>02.2 raw</li>
        </ul>
        <li>03 raw</li>
    </ul>

    <!-- orderd list -->
    <ol type="A" start=01>
        <li>01 raw</li>
        <li>02 raw</li>
        <ol type="I" start="1">
            <li>02.1 raw</li>
            <li>02.2 raw</li>
        </ol>
        <li>03 raw</li>
    </ol>

    <!-- Definition List  -->
    <dl>
        <dt>Definition List</dt>
        <dd>hi, 01 raw</dd>
        <dd>hi, 02 raw</dd>
        <dd>hi, 03 raw</dd>
    </dl>

